{
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 8
  },
  "extends": "eslint:recommended",
  "globals": {
    "afterEach": false,
    "beforeEach": false,
    "before": false,
    "after": false,
    "context": false,
    "describe": false,
    "expect": false,
    "it": false,
    "sinon": false,
    "Request": false,
    "Response": false,
    "Headers": false
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "space-before-function-paren": [
      "error",
      {
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "info",
          "log",
          "warn",
          "error"
        ]
      }
    ],
  }
}
